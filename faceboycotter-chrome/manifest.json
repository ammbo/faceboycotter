{
  "manifest_version": 2,

  "name": "FaceBoycotter",
  "description": "Boycott and Shame Facebook advertisers.",
  "version": "1.0",

  "browser_action": {
      "default_title": "FaceBoycotter",
      "default_popup": "popup.html"
  },

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": ["dialog.html","icon16.png"],

  "permissions": [
      "storage"
  ]
}